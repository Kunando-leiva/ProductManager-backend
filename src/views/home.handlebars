
<h1>Productos</h1>

  {{#if productos.length}}
    <ul>
      {{#each productos}}
        <li>
          <h2>{{this.title}}</h2>
          <p>{{this.description}}</p>
          <p>Precio: ${{this.price}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No hay productos disponibles.</p>
  {{/if}}

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/index.js"></script>
</div>
